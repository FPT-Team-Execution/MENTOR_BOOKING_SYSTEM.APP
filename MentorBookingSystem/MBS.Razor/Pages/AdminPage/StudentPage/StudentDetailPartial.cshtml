@using MBS.Razor.Pages.AdminPage.StudentPage.Models
@using MBS.Services.Utils
@model MBS.Razor.Pages.AdminPage.BaseAdminPage
@{
    var chosenStudent = Model.GetTempData<StudentModel>(TempDataKeys.ChosenStudent, isKeep: false) ?? new StudentModel();
    var majors = Model.GetTempData<IEnumerable<MajorModel>>(TempDataKeys.Majors) ?? [];
}
<div>
    <form method="post">
        <div class="d-flex mb-3 position-relative">
            <div class="mx-2 align-self-center" style="width: 150px; height: 150px; background-color: #f0f0f0;">
                <img src="@(chosenStudent.AvatarUrl ?? "https://via.placeholder.com/150")"
                     class="img-fluid"
                     style="max-width: 100%; max-height: 100%; object-fit: cover;" alt="mentor image"/>
                <input asp-for="@chosenStudent.AvatarUrl" type="hidden"/>
            </div>

            <div class="position-absolute" style="top: 0; right: 0; text-align: right;">
                <span class="d-block font-weight-bold" style="font-size: 1rem;">
                    Point Balance
                </span>
                <span class="badge bg-warning p-2" style="font-size: 1.2rem;">
                    @chosenStudent.WalletPoint <i class="fas fa-coins"></i>
                </span>
                <input asp-for="@chosenStudent.WalletPoint" type="hidden"/>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="@chosenStudent.FullName" class="form-label">Full Name</label>
            <input type="hidden" class="form-control" asp-for="@chosenStudent.Id">
            <input type="text" class="form-control" asp-for="@chosenStudent.FullName">
        </div>

        <div class="mb-3">
            <label asp-for="@chosenStudent.WalletPoint" class="form-label">Point</label>
            <div class="d-inline-flex flex-nowrap w-100">
                <input placeholder="0" type="text" class="form-control mr-2" asp-for="@chosenStudent.WalletPoint">
                <button class="btn btn-success mr-2" title="credit">
                    <i class="fas fa-solid fa-arrow-up"></i>
                </button>
                <button class="btn btn-danger mr-2" title="debit">
                    <i class="fas fa-solid fa-arrow-down"></i>
                </button>
                <button class="btn btn-primary mr-2" title="edit point balance">
                    <i class="fas fa-solid fa-pen"></i>
                </button>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="@chosenStudent.Email" class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="@chosenStudent.Email">
        </div>

        <div class="mb-3">
            <label asp-for="@chosenStudent.University" class="form-label">University</label>
            <input type="text" class="form-control" asp-for="@chosenStudent.University">
        </div>

        <div class="mb-3">
            <label asp-for="@chosenStudent.MajorId" class="form-label">Major</label>
            <select class="form-control" asp-for="@chosenStudent.MajorId">
                <option value="" disabled selected>Select a major</option>
                @{
                    foreach (var major in majors)
                    {
                        <option value="@major.Id">@major.Name</option>
                    }
                }
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="@chosenStudent.Birthday" class="form-label">Birthday</label>
            <input type="date" class="form-control" asp-for="@chosenStudent.Birthday" value="@ConvertUtils.FormatDateTimeToString(chosenStudent.Birthday)">
        </div>

        <div class="mb-3 d-flex justify-content-start">
            <div class="mr-2 w-25">
                <label asp-for="@chosenStudent.LockoutEnabled" class="form-label">Status</label>
                <select asp-for="@chosenStudent.LockoutEnabled" class="form-control">
                    <option value="false">Active</option>
                    <option value="true">Locked</option>
                </select>
            </div>
            <div class="mr-2 w-25">
                <label asp-for="@chosenStudent.Gender" class="form-label">Gender</label>
                <select asp-for="@chosenStudent.Gender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    @* <option value="Other">Other</option> *@
                </select>
            </div>
        </div>

        <div class="d-flex justify-content-start">
            <button class="btn btn-primary mr-2" type="submit" name="action" value="create">Create</button>
            <button class="btn btn-primary mr-2" type="submit" name="action" value="update">Update</button>
            <button class="btn btn-danger mr-2" type="submit" name="action" value="delete">Delete</button>
        </div>
    </form>
</div>