@* @page *@
@model MBS.Razor.Pages.AdminPage.UserPage.StudentPage.StudentDetailPartial

@{
    Layout = null;
}

<div>
    <form>
        <div class="d-flex mb-3 position-relative">
            <div class="mx-2 align-self-start">
                <img src="https://via.placeholder.com/150" class="img-fluid rounded-start" alt="mentor image"/>
            </div>
            <div class="position-absolute" style="top: 0; right: 0; text-align: right;">
                <span class="d-block font-weight-bold" style="font-size: 1rem;">
                    Point Balance
                </span>
                <span class="badge bg-warning p-2" style="font-size: 1.2rem;">
                    1500 <i class="fas fa-coins"></i>
                </span>
            </div>
        </div>


        <div class="mb-3">
            <label for="mentorName" class="form-label">Full Name</label>
            <input type="email" class="form-control" id="mentorName" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="mentorPoint" class="form-label">Point</label>
            <div class="d-inline-flex flex-nowrap w-100">
                <input placeholder="0" type="text" class="form-control mr-2" id="mentorPoint" aria-describedby="emailHelp">
                <button class="btn btn-success mr-2" title="credit">
                    <i class="fas fa-solid fa-arrow-up"></i>
                </button>
                <button class="btn btn-danger mr-2" title="debit">
                    <i class="fas fa-solid fa-arrow-down"></i>
                </button>
                <button class="btn btn-primary mr-2" title="edit point balance">
                    <i class="fas fa-solid fa-pen"></i>
                </button>

            </div>
        </div>
        <div class="mb-3">
            <label for="mentorEmail" class="form-label">Email</label>
            <input type="email" class="form-control" id="mentorEmail" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="mentorPw" class="form-label">Password</label>
            <input type="password" class="form-control" id="mentorPw">
        </div>
        <div class="mb-3">
            <label for="studentUni" class="form-label">University</label>
            <input type="password" class="form-control" id="studentUni">
        </div>
        <div class="mb-3">
            <label for="studentMajor" class="form-label">Major</label>
            <select class="form-control" id="studentMajor">
                <option value="" disabled selected>Select a major</option>
                <option value="university1">Global Business</option>
                <option value="university2">AI</option>
                <option value="university3">Software Engineer</option>
            </select>
        </div>

        <div class="mb-3 mr-2 w-25">
            <label for="mentorStatus" class="form-label">Status</label>
            <select id="mentorStatus" class="form-control" aria-describedby="statusHelp">
                <option value="active">Active</option>
                <option value="inactive">UnActive</option>
            </select>
        </div>
        <div class="d-flex justify-content-start ">
            <button type="submit" class="btn btn-primary mr-2">Update</button>
            <button type="submit" class="btn btn-danger mr-2">Delete</button>
        </div>
    </form>
</div>