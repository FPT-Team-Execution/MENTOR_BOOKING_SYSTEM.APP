                    <i class="fas fa-solid fa-arrow-down"></i>
                </button>
                <button class="btn btn-primary mr-2" title="edit point balance">
                    <i class="fas fa-solid fa-pen"></i>
                </button>

            </div>
        </div>
        <div class="mb-3">
            <label for="mentorEmail" class="form-label">Email</label>
            <input type="email" class="form-control" id="mentorEmail" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="mentorPw" class="form-label">Password</label>
            <input type="password" class="form-control" id="mentorPw">
        </div>
        <div class="mb-3">
            <label for="studentUni" class="form-label">University</label>
            <input type="password" class="form-control" id="studentUni">
        </div>
        <div class="mb-3">
            <label for="studentMajor" class="form-label">Major</label>
            <select class="form-control" id="studentMajor">
                <option value="" disabled selected>Select a major</option>
                <option value="university1">Global Business</option>
                <option value="university2">AI</option>
                <option value="university3">Software Engineer</option>
            </select>
        </div>

        <div class="mb-3 mr-2 w-25">
            <label for="mentorStatus" class="form-label">Status</label>
            <select id="mentorStatus" class="form-control" aria-describedby="statusHelp">
                <option value="active">Active</option>
                <option value="inactive">UnActive</option>
            </select>
        </div>
        <div class="d-flex justify-content-start ">
            <button type="submit" class="btn btn-primary mr-2">Update</button>
            <button type="submit" class="btn btn-danger mr-2">Delete</button>
        </div>
    </form>
